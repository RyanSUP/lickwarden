<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/tablature-styles.css" />
<%- include('../partials/nav') %>

<main>
    <div class="margin-sm">
        <% if (!user.profile._id.equals(profile.id)) { %>
            <div class="flex center margin-y-lg">
                <h1 class="thin-font"><%= profile.name %>'s public riffs</h1>
            </div>
        <% } %>
        <div class="flex wrap space-around">
            <% tabs.forEach(tab => { %>
                <div class="flex-col md">
                    <%- include('../partials/tab-card.ejs', {tab, showOwner: true}) %>
                </div>
            <% }) %>
            <% if (tabs.length === 0) { %>
                <div class="flex center md">
                    <p class="thin-font md">You have no riffs yet!</p>
                </div>
            <% } %>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>