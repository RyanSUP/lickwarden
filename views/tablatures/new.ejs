<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/tablature-edit-styles.css" />
<link rel="stylesheet" href="/stylesheets/tablature-styles.css" />

<%- include('../partials/nav') %>

<main>
  <div class="flex-col center lg">
    <form class="bg-color-0" action="/tablatures" method="POST" autocomplete="off">

      <div class="flex">
        <!-- Tab name -->
        <input type="text" name="name" class="text-input grow-1 xl" placeholder="a tasty lick" >
        
        <!-- Public switch -->
        <label class="switch">
          <input type="checkbox" name="public">
          <span class="slider round"></span>
        </label>
      
      </div>
      
      <!-- Folder select -->
      <div class="flex space-between">
        <select name="folder">
          <option value="null" selected>Add to collection</option>
          <% collections.forEach(collection => { %>
          <option value="<%= collection.id %>"><%= collection.name %></option>
          <% }) %>
        </select>
        <p class="sm no-marg">public</p>
      </div>
    
      <!-- Tab input field -->
      <!-- There are 240 available characters in this layout, but need to add an additional 5 to account for new line characters -->
      <textarea name="notesOnStrings" cols="40" rows="6" maxlength="251">
e----------------------------------------
B----------------------------------------
G----------------------------------------
D----------------------------------------
A----------------------------------------
E----------------------------------------</textarea>
    
    <!-- Save btn form -->
      <div class="flex center">
        <button type="submit" class="btn save-btn">
          SAVE
        </button>  
      </div>
    
    </form>
  </div>
<!-- Delete btn form -->
<form class="delete-form hidden">
  <button class="btn dlt-btn">
    <i class="fa-regular fa-trash-can"></i>
  </button>  
</form>
</main>

<%- include('../partials/footer') %>
