<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/tablature-styles.css" />
<%- include('../partials/nav') %>

<main>
    <div class="flex margin-lg">
        <h1><%= collection.name %></h1>

        <!-- Delete -->
        <form action="/collections/<%= collection._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn dlt-btn">
                <i class="fa-regular fa-trash-can"></i>
            </button>  
        </form>
    </div>

    <!-- View collections -->
    <div class="flex wrap space-around">
        <% tabs.forEach(tab => { %>
            <!-- Gallery element will need to be a grid -->
            <div class="flex-col md">
                <%- include('../partials/tab-card.ejs', {tab, showOwner: false}) %>
            </div>
        <% }) %>
    </div>
</main>

<%- include('../partials/footer') %>